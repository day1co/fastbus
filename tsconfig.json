{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "newLine": "lf",
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
